<% posts.forEach(post => { %>
    <div class="flex flex-col bg-white rounded-lg shadow-lg overflow-hidden">
        <img src="/uploads/<%= post.imageUrl %>" alt="<%= post.title %>" class="w-full h-48 object-cover" />
        
        <div class="px-4 py-3">
            <h3 class="font-bold text-lg"><%= post.title %></h3>
            <p class="text-sm text-gray-700"><%= post.description %></p>
            <p class="text-xs text-gray-500 mt-1">Por: <%= post.author.name || 'AnÃ´nimo' %></p>
            <% if (post.link) { %>
                <a href="<%= post.link %>" target="_blank" class="text-xs text-blue-500 hover:underline">Visitar link</a>
            <% } %>
            
            <div class="flex items-center justify-between mt-2">
                <form method="POST" action="/post/<%= post.id %>/like">
                    <button type="submit" class="flex items-center space-x-1 text-sm <%= (user && post.userHasLiked) ? 'text-red-500' : 'text-gray-600' %> hover:text-red-500 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path></svg>
                        <span><%= post._count.likes %></span>
                    </button>
                </form>

                <% if (user && user.id === post.author.id) { %>
                    <form method="POST" action="/post/<%= post.id %>/delete" onsubmit="return confirm('Tem certeza que deseja excluir este post?');">
                        <button type="submit" class="text-xs text-gray-500 hover:text-red-600 hover:underline">Excluir</button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
<% }) %>
